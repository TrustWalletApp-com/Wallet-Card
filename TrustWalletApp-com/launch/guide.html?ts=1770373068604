// ---- TRACK LEAD ONCE WHEN PAGE LOADED ----
document.addEventListener("DOMContentLoaded", function () {
    if (localStorage.getItem('fb_lead_tracked') !== 'true') {
        if (window.fbq && typeof fbq === 'function') {
            fbq('track', 'Lead');
            console.log(" Lead tracked on page load");
            localStorage.setItem('fb_lead_tracked', 'true');
        } else {
            console.log(" fbq not ready");
        }
    } else {
        console.log("Lead already tracked earlier");
    }
});
</script>



